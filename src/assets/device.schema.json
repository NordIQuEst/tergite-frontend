{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tergite.github.io/device.schema.json",
  "title": "Device",
  "description": "A quantum computing backend specification",
  "type": "object",
  "properties": {
    "name": {
      "description": "The unique name of the quantum computer",
      "type": "string"
    },
    "version": {
      "description": "The revision of this quantum computer",
      "type": "string"
    },
    "numberOfQubits": {
      "description": "The number of qubits in the quantum computer",
      "type": "integer",
      "minimum": 0
    },
    "lastOnline": {
      "description": "The last time this device was seen online",
      "anyOf": [
        {
          "type": "string",
          "format": "date-time"
        },
        { "type": "null" }
      ]
    },
    "isOnline": {
      "description": "Whether the quantum computer is online or not",
      "type": "boolean"
    },
    "basisGates": {
      "description": "The unique name of the quantum computer",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "couplingMap": {
      "description": "The uni-directional mapping showing how each qubit is connected",
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer",
          "minimum": 0
        },
        "minItems": 2,
        "maxItems": 2
      }
    },
    "coordinates": {
      "description": "The x,y coordinates of the qubits on the chip",
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer",
          "minimum": 0
        },
        "minItems": 2,
        "maxItems": 2
      }
    },
    "isSimulator": {
      "description": "Whether this is a simulator",
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "version",
    "numberOfQubits",
    "isOnline",
    "basisGates",
    "isSimulator",
    "couplingMap"
  ],
  "$defs": {
    "calibrationValue": {
      "type": "object",
      "required": ["date", "unit", "value"],
      "properties": {
        "date": {
          "type": "string",
          "description": "The ISO8601 timestamp when this value was generated",
          "format": "date-time"
        },
        "unit": {
          "type": "enum",
          "description": "The unit of measurement"
        },
        "value": {
          "type": "number",
          "description": "The amount of the given property"
        }
      }
    }
  }
}
